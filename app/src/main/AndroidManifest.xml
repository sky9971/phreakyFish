<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game_app">

    <application

        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/splash_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".GameOverActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Level_Screen" />
        <activity android:name=".Instructions" />
        <activity android:name=".MainActivity"/>
        <activity android:screenOrientation="portrait"  android:configChanges="orientation|screenSize" android:name=".Level2"/>
        <activity android:screenOrientation="portrait" android:configChanges="orientation|screenSize"  android:name=".Level3"/>
    </application>
    <supports-screens
    android:resizeable="true"
    android:smallScreens="true"
    android:normalScreens="true"
    android:largeScreens="true"
    android:anyDensity="true"
    />

</manifest>